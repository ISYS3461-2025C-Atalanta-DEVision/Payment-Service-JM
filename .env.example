# Auth Service Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application
APP_NAME=DEVision Job Manager
SPRING_PROFILES_ACTIVE=dev

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/authdb?retryWrites=true&w=majority

# Redis Configuration
REDIS_HOST=your-redis-host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWE Configuration (min 256 bits)
JWE_SECRET=your-super-secret-jwe-key-at-least-256-bits-long

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# OAuth2 Redirect URI (change based on environment)
# Local: http://localhost:8080/auth-service/login/oauth2/code/google
# Production: https://your-gateway.onrender.com/auth-service/login/oauth2/code/google
OAUTH2_REDIRECT_URI=http://localhost:8080/auth-service/login/oauth2/code/google

# Email Configuration (Brevo SMTP)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=your-email@example.com

# Internal API Key
INTERNAL_API_KEY=your-internal-api-key
INTERNAL_API_KEY_VALIDATION=false

# Eureka Configuration
EUREKA_ENABLED=true
EUREKA_URL=http://eureka:eureka-secret-2024@localhost:8761/eureka/

# Frontend URL
FRONTEND_URL=http://localhost:5173

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080
